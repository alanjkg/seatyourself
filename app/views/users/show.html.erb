<h1>Your list of Reservations</h1>  <%= link_to "Back to Restaurants", restaurants_url %>

<% @reservations.each do |reservation| %>
<h3><%= reservation.restaurant.name %></h3>
			<p><%= reservation.address %></p>
			<p>
				For <%= reservation.number_of_people %> people at <%= formatted_time(reservation.time) %>
			</p>
			<p>
				<%= link_to "Cancel this reservation", restaurant_reservation_path(reservation.restaurant_id, reservation.id), :confirm => "are you sure you want to cancel this reservation?", :method => :delete %>
			</p>
<% end %>